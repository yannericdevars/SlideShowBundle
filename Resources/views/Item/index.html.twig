<h1>Item list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ref</th>
            <th>Name</th>
            <th>Definition_short</th>
            <th>Definition</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.ref }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.definitionshort }}</td>
            <td>{{ entity.definition }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('item_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('item_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
